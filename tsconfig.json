{
  "compilerOptions": {
    "watch": true,
    "outDir": "js",
    "declaration": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "target": "es3",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "excludeNotExported": true
  }
}
